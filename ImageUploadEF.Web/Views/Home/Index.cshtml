@using ImageUploadEF.Data
@model List<Image>

<div b-gx69rlccnc="" class="container">
    <main b-gx69rlccnc="" role="main" class="pb-3">

        <div class="row">
            <div class="col-md-8 offset-md-2">


                @foreach (var image in Model)
                {
                    <div class="bg-light p-4 rounded shadow mb-3" style="margin-bottom: 20px; text-align: center;">
                        <a href="/home/viewimage?id=@image.Id">
                            <h3>@image.Title</h3>
                            <h5>Uploaded at: @image.UploadDate.ToLongTimeString()</h5>
                            <img style="width: 400px;" src="/uploads/@image.ImagePath">
                        </a>
                    </div>
                }

            </div>
        </div>
    </main>
</div>